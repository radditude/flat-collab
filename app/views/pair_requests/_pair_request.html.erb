<div class="item">
  <br>
  <div class="content">
    <div class="header"><%= pair_request.user.name %> needs a parter for <%= pair_request.project %></div><br>
    <%= pair_request.info %>
    <p class="small italic">Posted <%= pair_request.updated_at.strftime("%A, %B %e") %></p>
    <% if pair_request.user.id == current_user.id %>
        <%= button_to "Mark Inactive", pair_request_path(pair_request), method: "patch", class: "ui red button" %>
    <% else %>
      <%= button_to "Join Team!", teams_path, method: "post", class: "ui teal button" %>
    <% end %>
  </div>
  <br>
</div>
