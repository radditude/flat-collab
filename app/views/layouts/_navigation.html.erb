<div class="ui stackable teal inverted large menu" id="nav-bar">

  <!-- HOME -->
  <%= link_to "FlatCollab", root_path, :class => "item", :id => "home-link" %>

  <% if logged_in %>

    <!-- EDIT USER -->
    <%= link_to "Signed in as #{current_user.name}", edit_user_registration_path, :class => "italic item" %>

    <!-- TEAMS DROPDOWN -->
    <div class="menu">
      <div class="ui dropdown item">
        Teams
        <i class="dropdown icon"></i>
        <div class="menu" id="teamsMenu">
          <%# @current_user.teams.each do |team| %>
            <%#= link_to team.name, team_tasks_path(team), :class => "item" %>
          <%# end %>
        </div>
      </div>

    </div>


  <% else %>

    <!-- REGISTRATION AND SIGNUP LINKS -->
    <%= link_to "Sign In with Github", user_github_omniauth_authorize_path, :class => "item" %>
    <%= link_to "Sign In with Email", new_user_session_path, :class => "item" %>
    <%= link_to "Sign Up", new_user_registration_path, :class => "item" %>
  <% end %>

  <div class="right stackable menu">

    <!-- LOG OUT -->
    <% if logged_in %>
      <div class="item">
        <%= link_to "Sign Out", destroy_user_session_path, :class => "mini ui button", :method => "delete" %>
      </div>
    <% end %>

  </div>
</div>
