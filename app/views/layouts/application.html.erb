<!DOCTYPE html>
<html>
  <head>
    <title>FlatCollab</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navigation' %>
    <% if !!current_user %>
      <div class="ui text container">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    <% else %>
      <div class="ui text container">
        <div class="ui very padded segment vertical-space">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
