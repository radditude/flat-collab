<%= form_for [@team, @task], :html => {:class => "ui form"} do |f| %>

  <div class="field">
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name, :placeholder => (@task.errors.full_messages_for(:name).first || "do all the things") %>
  </div>
  
  <div class="field">
    <%= f.label :notes, "Notes:" %>
    <%= f.text_area :notes, :placeholder => "I said ALL the things"  %>
  </div>
  
  <div class="field">
      <%= f.label :user_ids, "Assign to: (you can leave this blank or change it later)" %>
      <%= f.collection_check_boxes :user_ids, @team.users, :id, :name do |b| %>
      
        <div class="ui checkbox">
          <%= b.check_box %>
          <%= b.label %>
        </div><br>
        
      <% end %>
  </div>

  <%= f.submit "Submit", class: "ui blue button" %>
<% end %>
